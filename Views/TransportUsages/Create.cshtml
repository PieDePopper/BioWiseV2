@model BioWiseV2.Models.TransportUsage

@{
    ViewData["Title"] = "Create";
}

<h1>Vervoers gebruik toevoegen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4>
                <label asp-for="Transport_type" class="control-label">Vervoersmiddel:</label>
                <select class="form-control" id="Transport_type" name="Transport_type">
                    <option>Trein</option>
                    <option>Auto</option>
                    <option>Fiets</option>
                    <option>Boot</option>
                    <option>Vliegtuig</option>
                    <option>Anders....</option>
                </select>
                </h4>
                <span asp-validation-for="Transport_type" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="Transport_type" class="control-label"></label>
                <input asp-for="Transport_type" class="form-control" />
                <span asp-validation-for="Transport_type" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                @*<label asp-for="Distance" style="display:none" class="control-label"></label>*@
                <h4>Afstand:</h4> <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Uitstoot per kilometer:</h4> @*<label asp-for="Emmission_KM" style="display:none" class="control-label"></label>*@
                <input asp-for="Emmission_KM" class="form-control" />
                <span asp-validation-for="Emmission_KM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsumerId" style="display:none" class="control-label"></label>
                <select asp-for="ConsumerId" style="display:none" class="form-control" asp-items="ViewBag.ConsumerId"></select>
            </div>
            <div class="form-group">
                <h4>
                    Week nummer:</h4>
                @*<label asp-for="Weekly_reportId" class="control-label"></label>*@
                <select asp-for="Weekly_reportId" class ="form-control" asp-items="ViewBag.Weekly_reportId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Toevoegen" class="btn btn-success" style="width: 10rem" /> &nbsp; <input onclick="window.location.href='../voortgang'" value="Terug" class="btn btn-danger" style="width: 10rem" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
